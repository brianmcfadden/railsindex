{
	"name": "railsindex",
	"displayName": "RailsIndex",
	"description": "Adds right-click menu to 'ri' in rb and erb files",
	"icon": "images/icon.png",
	"version": "0.2.8",
	"publisher": "brianmcfadden",
	"repository": {
		"type": "git",
		"url": "https://github.com/brianmcfadden/railsindex"
	},
	"engines": {
		"vscode": "^1.37.0"
	},
	"categories": [
		"Programming Languages",
		"Other"
	],
	"activationEvents": [
		"onCommand:ri.doc"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ri.doc",
				"title": "RailsIndex documentation"
			}
		],
		"languages": [
			{
				"id": "rb",
				"extensions": [
					".rb",
					".erb"
				]
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorLangId == 'rb'",
					"command": "ri.doc",
					"group": "navigation@1"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "RailsIndex",
			"properties": {
				"ri.path": {
					"type": "string",
					"default": "ri",
					"description": "Path to the 'ri' utility.  Leave as default if 'ri' is already on your PATH."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.17.45",
		"@types/vscode": "^1.37.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"tslint": "^5.20.1",
		"typescript": "^3.9.7",
		"vscode-test": "^1.4.1"
	}
}
